{{>_navbar}}
{{#each erros}}
    <div class="alert alert-danger">
        {{texto}}
    </div>
{{else}}

{{/each}}
<div class="card">
    <div class="card-body">
        <h2 class="texto-principal">Perfil</h2>
        <div class="card">
            <div class="card-body">
                <div class="card-body">
                    <form action="/editing/profile" method="POST">
                        <input type="hidden" name="id" value="{{user._id}}">
                        <label for="name_user" class="form-label">Usuário:</label>
                        <input type="text" name="name_user" id="id_name_user" placeholder="Alterar nome de usuário" class="form-control" value="{{user.name_user}}" required>
                        
                        <div id="area-botao">
                            <button type="submit" id="concluir" class="btn mt-3">
                                Alterar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
