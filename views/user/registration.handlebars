{{#each erros}}
    <div class="alert alert-danger">
        {{texto}}
    </div>
{{else}}

{{/each}}

<h2 class="texto_principal">Registro</h2>

<div class="card mt-4">
    <div class="card-body">
        <form action="/new/registration" method="POST">
            <label for="name_user" class="form-label">Usuário:</label>
            <input type="text" name="name_user" id="id_name_user" placeholder="Nome do usuário" class="form-control" required>
            
            <label for="password" class="form-label">Senha:</label>
            <input type="password" name="password" id="id_password" placeholder="Digite uma senha" class="form-control" required>
            
            <label for="password_compared" class="form-label">Confirmar senha:</label>
            <input type="password" name="password_compared" id="id_password_compared" placeholder="Confirme sua senha" class="form-control" required>
            
            <div id="area-botao">
                <button type="submit" class="btn btn-success mt-3">
                    Registrar
                </button>
            </div>
        </form>
    </div>
</div>