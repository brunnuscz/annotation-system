<div id="fundo-secundario">
    <h2 class="texto-principal">Anotação</h2>
    <div class="card-body">
        <form action="" method="POST">
            <label for="title" class="form-label">Titulo:</label>
            <input type="text" name="title" id="id_title" class="form-control" disabled value="{{annotation.title}}">
            <div class="mb-3">
                <label for="annotation" class="form-label">Anotação:</label>
                <textarea class="form-control"name="annotation" id="id_annotation" rows="9" placeholder="Escreva sua anotação" disabled>{{annotation.annotation}}</textarea>
            </div>
            <label for="title" class="form-label">Nome do criador:</label>
            <input type="text" name="title" id="id_title" class="form-control" disabled value="{{annotation.user_name}}">
            <label for="date" class="form-label">Data de criação:</label>
            <input type="text" name="date" id="id_date" class="form-control" disabled value="{{annotation.date}}">
        </form>
    </div>
</div>
