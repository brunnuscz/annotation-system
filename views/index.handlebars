{{#each erros}}
    <div class="alert alert-danger">
        {{texto}}
    </div>
{{else}}

{{/each}}
<div class="card">
    <div class="card-body">
        <div class="jumbotron texto-principal">
            <h1 class="display-4">Olá, seja bem-vindo ao Noted Here!</h1>
            <p class="lead">Registre-se, faça o seu login e gerencie suas anotações.</p>
        </div>
        <h2 class="texto-principal">
            Login
        </h2>
        <div id="card-novo" class="mt-4">
            <div class="card-body">
                <form action="/realizing/login" method="POST">
                    <label for="name_user" class="form-label">Usuário:</label>
                    <input type="text" name="name_user" id="id_name_user" placeholder="Nome do usuário" class="form-control" required>
                    
                    <label for="password" class="form-label">Senha:</label>
                    <input type="password" name="password" id="id_password" placeholder="Senha do usuário" class="form-control" required>
                    <h6 class="mt-2">
                        Não tem uma conta? 
                        <a id="link-registrar" href="/registration">
                            Registre-se
                        </a>
                    </h6>
                    <div id="area-botao">
                        <button type="submit" id="concluir" class="btn mt-3">
                            Entrar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

